pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout the Terraform configuration from your Git repository on the main branch
                git branch: 'main', url: 'https://github.com/adjune9811/Jenkins-Azure-TF.git'
            }
        }
        stage('Terraform Init') {
            steps {
                script {
                    withCredentials([azureServicePrincipal(credentialsId: 'AZ-SPN-adnov11')]) {
                        // Set environment variables for Terraform authentication
                        env.AZURE_CLIENT_ID = "${AZ_SPN_CLIENT_ID}"
                        env.AZURE_CLIENT_SECRET = "${AZ_SPN_CLIENT_SECRET}"
                        env.AZURE_TENANT_ID = "${AZ_SPN_TENANT_ID}"
                        env.AZURE_SUBSCRIPTION_ID = "${AZ_SPN_SUBSCRIPTION_ID}"

                        // Initialize Terraform to download providers and set up the working directory
                        sh 'terraform init'
                    }
                }
            }
        }
        stage('Terraform Plan') {
            steps {
                script {
                    withCredentials([azureServicePrincipal(credentialsId: 'AZ-SPN-adnov11')]) {
                        // Set environment variables for Terraform authentication
                        env.AZURE_CLIENT_ID = "${AZ_SPN_CLIENT_ID}"
                        env.AZURE_CLIENT_SECRET = "${AZ_SPN_CLIENT_SECRET}"
                        env.AZURE_TENANT_ID = "${AZ_SPN_TENANT_ID}"
                        env.AZURE_SUBSCRIPTION_ID = "${AZ_SPN_SUBSCRIPTION_ID}"

                        // Run Terraform plan to preview changes
                        sh 'terraform plan -out=tfplan'
                    }
                }
            }
        }
        stage('Terraform Apply') {
            steps {
                script {
                    withCredentials([azureServicePrincipal(credentialsId: 'AZ-SPN-adnov11')]) {
                        // Set environment variables for Terraform authentication
                        env.AZURE_CLIENT_ID = "${AZ_SPN_CLIENT_ID}"
                        env.AZURE_CLIENT_SECRET = "${AZ_SPN_CLIENT_SECRET}"
                        env.AZURE_TENANT_ID = "${AZ_SPN_TENANT_ID}"
                        env.AZURE_SUBSCRIPTION_ID = "${AZ_SPN_SUBSCRIPTION_ID}"

                        // Apply the changes defined in the Terraform configuration
                        sh 'terraform apply -auto-approve tfplan'
                    }
                }
            }
        }
    }
    post {
        always {
            // Optional: Cleanup stage
            echo "Pipeline execution complete."
        }
    }
}
